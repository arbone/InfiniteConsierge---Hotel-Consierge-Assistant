# Hotel Concierge Bot - Environment Variables Example
# Copia questo file in .env e inserisci le tue chiavi API

# OpenAI API Key (opzionale - per LLM-enhanced features)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (opzionale - alternativa a OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database path (opzionale - default: data/hotel_database.sqlite)
DATABASE_PATH=data/hotel_database.sqlite

# Knowledge Base path (opzionale - default: data/hotel_knowledge_base.json)
KB_PATH=data/hotel_knowledge_base.json

# Logging level (opzionale - default: INFO)
LOG_LEVEL=INFO

# Hotel Configuration
HOTEL_NAME="Grand Hotel Venezia"
HOTEL_PHONE="+39 041 1234567"
RECEPTION_INTERNAL_NUMBER="0"
